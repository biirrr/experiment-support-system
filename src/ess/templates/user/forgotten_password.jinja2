{% extends 'ess:templates/layouts/backend/narrow.jinja2' %}

{% block title %}Experiment Support System | Request a new Password{% endblock title %}

{% block main %}
{% from 'ess:templates/macros/forms.jinja2' import field with context %}
<h1>Request a new Password</h1>
<form action="{{ 'user.forgotten_password'|route_url() }}" method="post">
  <input type="hidden" name="redirect" value="{{ request.params.redirect }}"/>
  {{ field('email', 'email', 'E-Mail Address') }}
  <div class="buttons">
    <ul>
      <li><a href="{{ 'user.login'|route_url() }}">&larr; Back to the sign in</a></li>
    </ul>
    <ul>
      <li><button class="button primary">Request a new Password</button></li>
    </ul>
  </div>
</form>
{% endblock main %}
